	    <div class="lower_section"> 
	    	<div class="hand vhand-compact" id="HeartDisplayDown">
		   		<img class='card' src='cardsJS/cards/BLUE_BACK.svg'>
 			</div>
 			<div class="hand vhand-compact" id="SpadeDisplayDown">
		   		<img class='card' src='cardsJS/cards/BLUE_BACK.svg'>
 			</div>
 			<div class="hand vhand-compact" id="DiamondDisplayDown">
		   		<img class='card' src='cardsJS/cards/BLUE_BACK.svg'>
 			</div>
 			<div class="hand vhand-compact" id="ClubDisplayDown">
		   		<img class='card' src='cardsJS/cards/BLUE_BACK.svg'>
 			</div>
	    </div>
	    <div class="players"> 
    		<div class="player" id="player1" >Player</div> 
    	</div>
    	<div class="hand hhand-compact active-hand" id = "player_hand">
			  <img class='card active-hand' id = "c1">
			  <img class='card' id = "c2">
			  <img class='card' id = "c3">
			  <img class='card' id = "c4">
