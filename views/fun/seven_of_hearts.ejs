<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seven of Hearts</title>
    <link rel="stylesheet" href="/css/seven_of_hearts.css">
    <link rel="stylesheet" href="/cardsJS/cards.css">
</head>
<body>
    <div class="game-container">
        <!-- <div class="card-display" id="cardDisplay"></div> -->
        <div class="players"> 
    		<div class="player" id="comp1">Comp1</div> 
    		<div class="player" id="comp2">Comp2</div> 
    	</div>
    	
    	<div class="upper_section"> 
    		<div class="hand vhand-compact" id="HeartDisplayUp">
		   		<img class='card' src='cardsJS/cards/BLUE_BACK.svg'>
