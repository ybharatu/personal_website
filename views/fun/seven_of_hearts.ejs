        <div class="controls">
            <!-- <button id="higherBtn">Higher</button>
            <button id="lowerBtn">Lower</button> -->
            <button id="startBtn" style="visibility: visible;">Start</button>
            
        </div>
        <button id="resetBtn" style="visibility: hidden;">Reset</button>
        <div class="score">Score: <span id="score">0</span></div>
        <div class="score">Comp 1 Score: <span id="comp1_score">0</span></div>
        <div class="score">Comp 2 Score: <span id="comp2_score">0</span></div>
        <div class="cur_player">Current Player: <span id="cur_player">Player</span></div>
    </div>
    <script src="/cardsJS/cards.js"></script>
    <script src="/js/fun/seven_of_hearts.js"></script>
