    <script>
        // Sample data (replace with your actual data)
        const poems = [
            { title: "Poem 1", content: "This is the content of poem 1.", date: "2024-02-25" },
            { title: "Poem 2", content: "This is the content of poem 2.", date: "2024-02-24" },
            { title: "Poem 3", content: "This is the content of poem 3.", date: "2024-02-23" }
            // Add more poems as needed
        ];

        // Function to display poems
        function displayPoems() {
            const poemList = document.getElementById('poemList');
            poemList.innerHTML = ''; // Clear previous content

            poems.forEach(poem => {
                const listItem = document.createElement('li');
                const poemDate = new Date(poem.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });

                listItem.innerHTML = `
                    <h2>${poem.title}</h2>
                    <p>Date: ${poemDate}</p>
                    <p>${poem.content}</p>
                `;
                poemList.appendChild(listItem);
            });
        }

        // Call the displayPoems function when the page loads
        window.onload = displayPoems;
    </script>
